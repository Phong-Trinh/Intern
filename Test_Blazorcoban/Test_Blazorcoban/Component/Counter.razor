@page "/counter"
    <link href="../Component/Counter.razor.css" rel="stylesheet" />
    <div class="counter">
        <div class="tear" style="background-color: @tick1;"> </div>
        <div class="tear" style="background-color: @tick2;"> </div>
        <div class="tear" style="background-color: @tick3;"> </div> 
        <div class="tear" style="background-color: @tick4;"> </div> 
        <div class="tear" style="background-color: @tick5;"> </div>
    </div>
    @code {
        [Parameter]
        public string tick1 { get; set; }
        [Parameter]
        public string tick2 { get; set; }
        [Parameter]
        public string tick3 { get; set; }
        [Parameter]
        public string tick4 { get; set; }
        [Parameter]
        public string tick5 { get; set; }
    }
